
# Copy this file to `.env` and fill in values.
# These variables are read by `config/settings.py`.

# --- Supabase ---
# Your project URL (Project Settings → API → Project URL)
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co

# Service role key (Project Settings → API → service_role key)
# Keep this secret and NEVER expose it to frontend clients.
SUPABASE_SERVICE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# Public anon key (Project Settings → API → anon public key)
# Safe to use in clients; used by tests to sign in.
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_PUBLIC_KEY

# Optional: integration test credentials (used only by tests)
TEST_USER_EMAIL=
TEST_USER_PASSWORD=

# --- AI Providers (optional depending on usage) ---
GEMINI_API_KEY=
OPENAI_API_KEY=

# --- App ---
# "true" enables production CORS restrictions in app.py
PRODUCTION=false

